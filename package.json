{
  "name": "NavToolUpdater",
  "productName": "NavToolUpdater",
  "version": "3.0.0",
  "description": "NavTool Devices USB Updater",
  "main": "main.js",
  "author": "Oleg Sokolov",
  "license": "CC0-1.0",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV='development' npm run start",
    "dist": "electron-builder .",
    "dist-all": "build -owl --x64",
    "build": "electron-builder .",
    "dist-mac": "electron-builder . --publish=always",
    "dist-win": "electron-builder . --win --publish=onTagOrDraft",
    "reload": "live-reload app --port 35729",
    "rebuild": "electron-rebuild",
    "electron-rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps",
    "watch": "./node_modules/.bin/webpack-dev-server",
    "webpack": "webpack -p --config ./webpack-production.config.js"
  },
  "keywords": [
    "hid",
    "node-hid",
    "usb",
    "electron"
  ],
  "build": {
    "appId": "com.nsu.installer",
    "asar": true,
    "npmRebuild": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "ovsokolov",
      "repo": "navtool-usb-updater-releases"
    },
    "mac": {
      "hardenedRuntime": false,
      "category": "public.app-category.utilities",
      "icon": "pkg/icon.icns",
      "gatekeeperAssess": false,
      "entitlements": "build/navtoolupdater.mac.plist",
      "entitlementsInherit": "build/navtoolupdater.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "img/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "target": "nsis"
    }
  },
  "dependencies": {
    "axios": "^0.15.2",
    "bootstrap": "^3.3.5",
    "electron-dl": "^1.12.0",
    "electron-log": "^1.3.0",
    "electron-settings": "^3.0.14",
    "electron-updater": "^4.0.0",
    "lodash": "^4.17.2",
    "muicss": "^0.9.4",
    "node-hid": "^0.7.9",
    "react": "^15.3.2",
    "react-bootstrap": "^0.28.5",
    "react-bootstrap-table": "^2.6.0",
    "react-dom": "^15.3.2",
    "react-icons": "^2.2.1",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.0",
    "react-tabs-component": "^1.1.3",
    "redux": "^3.6.0",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0",
    "selector-observer": "^1.1.0",
    "usb-detection": "^4.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babili-webpack-plugin": "^0.1.2",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "dotenv": "^8.2.0",
    "electron": "^11.5.0",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-notarize": "^0.2.0",
    "electron-rebuild": "^1.8.5",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.4",
    "less": "^3.0.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-abi": "^2.10.0",
    "node-libs-browser": "^0.5.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.2",
    "postcss-pxtorem": "^4.0.1",
    "rimraf": "^2.5.4",
    "style-loader": "^1.0.0",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0"
  }
}
